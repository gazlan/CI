	Swap values of two integer variables.

	@author		Ashwin Jha<ajha.dev@gmail.com>

*****************************************************************************************************/

void swap(int* x, int* y) {
	int temp;
	temp = *x;
	*x = *y;
	*y = temp;
}

int main() {
	int x = 15, y = 20;
	printf("Before swap x = %d, y = %d.\n", x, y);
	swap(&x, &y);
	printf("After swap x = %d, y = %d.\n", x, y);
	return 0;
}
