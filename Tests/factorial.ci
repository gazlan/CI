	Factorial.

	@author		Ashwin Jha<ajha.dev@gmail.com>

*****************************************************************************************************/

long fact(long n) {
	if(n == 0 || n == 1) {
		return 1;
	} else {
		return (n * fact(n-1));
	}
}

int main() {
	long x;
	printf("Enter the number:\t");
	scanf("%ld", &x);
	printf("Factorial:\t%ld\n", fact(x));
	return 0;
}
